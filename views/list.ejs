<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List</title>
</head>

<%- include('links'); -%>

<body class="container">
    <!--navigation-->
    <%- include('nav'); -%>

    <div class="container__content">
        <div class="container__content-form">
            <!--this form helps use to collect data from the user-->
            <form action="/list" method="POST" class="form">
                <h1 class="heading-2 form__heading"><%= heading %> </h1>
                <input type="text" name="nameItem" class="form__input" placeholder="Type Here">
                <label for="text" class="form__label">Type Here</label>
                <button type="submit" name="button" class="form__btn"><span class="btn-text">+</span></button>
            </form>
        </div>

        <!--to do list-->

        <div class="container__content-card">
            <div class="card">
                <!--2.2-->
                <h2 class="card__heading heading-3 "><%= kindOfDay %>'s Plans</h2>

                <!--Create a new list-->
                <ul class="card__list">
                    <!--3.35-->
                    <% for(let i = 0; i < newitem.length; i++) {%>
                    <li class="card__item">
                        <input class="card__item-input" type="checkbox">
                        <p class="card__p text"><%= newitem[i] %> </p>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>

    </div>
    <!--footer-->
    <%- include('footer'); -%>

</body>

</html>